<?xml version="1.0" encoding="UTF-8"?>
<Context>

	<!-- Defines a JNDI DataSource Resource for Database Connection Pooling -->
	<Resource name="jdbc/bank_db" auth="Container"
		type="javax.sql.DataSource" driverClassName="com.mysql.cj.jdbc.Driver"
		url="jdbc:mysql://localhost:3306/bank_db?useSSL=false&amp;serverTimezone=Asia/Kolkata&amp;abandonedConnectionCleanup=false"
		username="root" password="root" maxActive="100" maxIdle="30"
		maxWait="10000" />

</Context>